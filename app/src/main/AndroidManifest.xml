<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miriapodel.backtoworkapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BackToWorkApp">
        <activity
            android:name=".WebView"
            android:exported="true"
            android:label="@string/about"/>
        <activity
            android:name=".addToFavoritesActivity"
            android:exported="true"
            android:label="@string/favorites"/>
        <activity
            android:name=".alreadyReadBooksActivity"
            android:exported="true"
            android:label="@string/already_read"/>
        <activity
            android:name=".wantToReadActivity"
            android:exported="true"
            android:label="@string/wishlist"/>
        <activity
            android:name=".CurrentlyReadingActivity"
            android:exported="true"
            android:label="@string/currently_reading"/>
        <activity
            android:name=".BookActivity"
            android:exported="true"
            android:label="@string/book_details"/>
        <activity
            android:name=".SeeAllBooksActivity"
            android:exported="true"
            android:label="@string/all_books"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>